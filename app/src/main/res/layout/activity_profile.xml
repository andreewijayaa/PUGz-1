<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="pugzmain.example.pugz.Profile" android:background="@drawable/background">

    <TextView
            android:text="E-Mail"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:id="@+id/emailText"
            android:paddingLeft="16dp"
            android:paddingTop="12dp"
            android:background="@drawable/rounded_text" android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/logoutButton" android:layout_marginBottom="90dp"
            app:layout_constraintBottom_toTopOf="@+id/logoutButton"
            app:layout_constraintStart_toStartOf="@+id/logoutButton"/>
    <TextView
            android:text="Last Name"
            android:layout_height="45dp"
            android:id="@+id/lastnameText"
            android:paddingLeft="16dp"
            android:paddingTop="12dp"
            android:background="@drawable/rounded_text" android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/emailText"
            android:layout_width="0dp"
            app:layout_constraintBottom_toTopOf="@+id/editText4" app:layout_constraintStart_toStartOf="@+id/emailText"/>
    <Button
            android:text="Log Out"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/logoutButton" app:layout_constraintStart_toStartOf="@+id/bottomNav"
            app:layout_constraintEnd_toEndOf="@+id/bottomNav" android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/bottomNav" android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp" android:background="@drawable/rounded_maroon"/>
    <android.support.design.widget.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bottomNav"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:menu="@menu/bottom_nav_menu"
            app:itemIconTint="@android:color/white"
            app:itemTextColor="@android:color/white"
            android:background="@android:color/black"/>
    <EditText
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:text="First Name:"
            android:ems="10"
            android:id="@+id/editText"
            android:textColor="@android:color/white" android:textStyle="bold" android:textAllCaps="false"
            android:textSize="18sp"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="@+id/logoutButton" android:layout_marginLeft="24dp"
            app:layout_constraintBottom_toTopOf="@+id/firstnameText"/>
    <EditText
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:text="Last Name:"
            android:ems="10"
            android:id="@+id/editText3"
            android:textColor="@android:color/white" android:textStyle="bold" android:textAllCaps="false"
            android:textSize="18sp"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="@+id/logoutButton" android:layout_marginLeft="24dp"
            app:layout_constraintBottom_toTopOf="@+id/lastnameText"/>
    <EditText
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:text="E-mail:"
            android:ems="10"
            android:id="@+id/editText4"
            android:textColor="@android:color/white" android:textStyle="bold" android:textAllCaps="false"
            android:textSize="18sp"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="@+id/logoutButton" android:layout_marginLeft="24dp"
            app:layout_constraintBottom_toTopOf="@+id/emailText"/>
    <TextView
            android:text="First Name"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:id="@+id/firstnameText"
            android:paddingLeft="16dp"
            android:paddingTop="12dp"
            android:background="@drawable/rounded_text" android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/lastnameText"
            app:layout_constraintBottom_toTopOf="@+id/editText3"
            app:layout_constraintStart_toStartOf="@+id/lastnameText"/>
</android.support.constraint.ConstraintLayout>